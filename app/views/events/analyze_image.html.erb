<div class="container">
  <h1>画像分析結果</h1>
  <% if @advice.present? %>
    <div class="alert alert-info" role="alert">
      <strong>アドバイス：</strong> <%= @advice %>
    </div>
  <% else %>
    <div class="alert alert-warning" role="alert">
      分析結果が見つかりませんでした。
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to '別の画像を分析する', new_image_analysis_path, class: 'btn btn-primary' %>
    <%= link_to 'スケジュールに戻る', vegetable_schedule_path, class: 'btn btn-secondary' %>
  </div>
</div>