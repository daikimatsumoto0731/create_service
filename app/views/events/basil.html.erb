<h1>バジルのスケジュール</h1>

<div class="schedule-buttons">
  <% @events.each do |event| %>
    <!-- btn-info クラスを削除し、カスタムクラス btn-basil を適用 -->
    <%= button_tag event.name, type: 'button', class: 'btn btn-basil stage-button', data: { toggle: 'modal', target: "#event#{event.id}_modal", 'event-id': event.id } %>

    <!-- モーダル定義 -->
    <div class="modal fade" id="event<%= event.id %>_modal" tabindex="-1" role="dialog" aria-labelledby="event<%= event.id %>_label" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document"> <!-- 中央配置を維持 -->
        <div class="modal-content">
          <div class="modal-header modal-header-basil">
            <h5 class="modal-title" id="event<%= event.id %>_label"><%= event.name %>のアドバイス</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- AJAXでアドバイスを動的に挿入 -->
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- 既存の収穫ボタン -->
<%= link_to '収穫する', harvest_path, class: 'btn btn-success' %>
