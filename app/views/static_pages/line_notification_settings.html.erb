<!DOCTYPE html>
<html>
<head>
  <title>LINE通知設定</title>
  <%= stylesheet_link_tag 'application' %> <!-- スタイルシートのリンク -->
  <%= javascript_include_tag 'application' %> <!-- JavaScriptファイルのリンク -->
</head>
<body>
  <header class="header">
    <h1>LINE通知設定</h1>
  </header>
  
  <div class="line-notification-settings-container">
    <%= form_for(@user.line_notification_setting || @user.build_line_notification_setting, url: line_notification_settings_path, method: :patch) do |f| %>
      <div class="field">
        <%= f.label :receive_notifications, "LINE通知を受け取る" %>
        <%= f.check_box :receive_notifications %>
      </div>
      <div class="field">
        <%= f.label :frequency, "通知頻度" %>
        <%= f.select :frequency, options_for_select(['daily', 'weekly', 'monthly'], @user.line_notification_setting.try(:frequency) || 'daily') %>
      </div>
      <%= f.submit "設定を保存", class: 'btn-save' %>
    <% end %>
    
    <div class="devise-links">
      <%= link_to 'トップページへ', root_path, class: 'btn-back' %>
      <%= link_to 'マイページへ', user_path(@user), class: 'btn-back' %>
    </div>
  </div>

  <footer class="footer">
    <!-- フッターの内容 -->
  </footer>
</body>
</html>
