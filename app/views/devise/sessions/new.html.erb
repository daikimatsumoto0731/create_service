<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="header-login">
  <%= link_to '会員登録', new_registration_path(resource_name), class: 'header-button' %>
  <!--#パスワード再設定画面は出来次第表示<%= link_to 'パスワードをお忘れの方はこちら', new_password_path(resource_name), class: 'header-button' %> -->
</div>

<div class="login-form-container-login">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field-login">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field-login">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <div class="actions-login">
      <%= f.submit "ログイン", class: "login-button" %>
    </div>
  <% end %>
  <%= link_to "LINEログイン", user_line_omniauth_authorize_path, method: :post, class: "line-login-button-login" %>
</div>

<div class="footer-login">
  <%= link_to '利用規約', terms_path, class: 'footer-link' %>
  <%= link_to 'プライバシーポリシー', privacy_policy_path, class: 'footer-link' %>
</div>
