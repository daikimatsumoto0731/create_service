<div class="header">
  <%= link_to '会員登録', new_registration_path(resource_name), class: 'header-button' %>
  <%= link_to 'パスワードをお忘れの方はこちら', new_password_path(resource_name), class: 'header-button' %>
</div>

<div class="login-form-container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "login-button" %>
    </div>
  <% end %>
  <%= link_to "LINEログインはこちらから", user_line_omniauth_authorize_path, method: :post, class: "line-login-button" %>
</div>

<div class="footer">
  <%= link_to '利用規約', terms_path, class: 'footer-link' %>
  <%= link_to 'プライバシーポリシー', privacy_policy_path, class: 'footer-link' %>
</div>
