<!DOCTYPE html>
<html>
<head>
  <title>LINE通知設定</title>
  <%= stylesheet_link_tag 'application', media: 'all' %> <!-- スタイルシートのリンク -->
  <%= javascript_include_tag 'application' %> <!-- JavaScriptファイルのリンク -->
</head>
<body>
  <header class="header">
    <h1>LINE通知設定</h1>
  </header>
  
  <div class="container">
    <% if flash[:notice].present? %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_for(@line_notification_setting, url: line_notification_settings_path, method: :patch, html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :receive_notifications, "LINE通知を受け取る", class: 'control-label' %>
        <%= f.check_box :receive_notifications, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :notification_time, "通知時間", class: 'control-label' %>
        <%= f.time_select :notification_time, { ignore_date: true, minute_step: 30, time_separator: ":" }, { class: 'form-control' } %>
      </div>

      <%= f.submit "設定を保存", class: 'btn btn-primary' %>
    <% end %>

    <div class="nav-links">
      <%= link_to 'トップページへ', root_path, class: 'btn btn-secondary' %>
      <%= link_to 'マイページへ', user_path(@user), class: 'btn btn-secondary' %>
    </div>
  </div>

  <footer class="footer">
    <!-- フッターの内容 -->
  </footer>
</body>
</html>
