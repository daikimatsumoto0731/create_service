<!DOCTYPE html>
<html>
<head>
  <title>LINE通知設定</title>
  <%= stylesheet_link_tag 'application' %> <!-- スタイルシートのリンク -->
  <%= javascript_include_tag 'application' %> <!-- JavaScriptファイルのリンク -->
</head>
<body>
  <header class="header">
    <h1>LINE通知設定</h1>
  </header>
  
  <div class="line-notification-settings-container">
    <%= form_for(@line_notification_setting, url: line_notification_settings_path, method: :patch) do |f| %>
      <div class="field">
        <%= f.label :receive_notifications, "LINE通知を受け取る" %>
        <%= f.check_box :receive_notifications %>
      </div>
    
      <!-- 通知時間を設定するための時刻選択フィールドを追加 -->
      <div class="field">
        <%= f.label :notification_time, "通知時間" %>
        <%= f.time_select :notification_time, ignore_date: true, minute_step: 1, time_separator: ":", ampm: true %>
      </div>
    
      <!-- ユーザーIDのフィールドを追加 -->
      <div class="field">
        <%= f.label :line_auth_info_user_id, "LINEユーザーID" %>
        <%= f.text_field :line_auth_info_user_id, placeholder: "ユーザーIDを入力" %>
      </div>
    
      <%= f.submit "設定を保存", class: 'btn-save' %>
    <% end %>  

    <div class="devise-links">
      <%= link_to 'トップページへ', root_path, class: 'btn-back' %>
      <%= link_to 'マイページへ', user_path(@user), class: 'btn-back' %>
    </div>
  </div>

  <footer class="footer">
    <!-- フッターの内容 -->
  </footer>
</body>
</html>
