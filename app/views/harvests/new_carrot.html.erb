<%= stylesheet_link_tag 'harvest_forms', media: 'all', 'data-turbolinks-track': 'reload' %>
<body class="carrot new_carrot">
  <div class="container-harvest">
    <header class="header">
      <h1>収穫量を入力してください</h1>
    </header>

    <%= form_with model: @harvest, url: harvests_path, local: true, html: { class: "vegetable-section-harvest carrot" } do |form| %>
      <%= form.hidden_field :vegetable_type, value: "にんじん" %>

      <div class="field-harvest">
        <%= form.label :amount, "収穫量 (g)", class: "label-harvest" %>
        <%= form.text_field :amount, class: "input-harvest" %>
      </div>

      <div class="field-harvest">
        <label class="label-harvest">現在の市場価格 (1kgあたり):</label>
        <span id="market_price"><%= @price_per_kg %> 円</span>
      </div>

      <div class="actions-harvest">
        <%= form.submit "計算する", class: "button-harvest" %>
      </div>
    <% end %>

    <footer class="footer">
      © 2024 Vegetable Calculator
    </footer>
  </div>
</body>
