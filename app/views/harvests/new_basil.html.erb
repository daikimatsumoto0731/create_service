<h1>バジルの収穫量を入力してください</h1>

<%= form_with model: @harvest, url: harvests_path, local: true do |form| %>
  <%= form.hidden_field :vegetable_type, value: "バジル" %>

  <div class="field">
    <%= form.label :amount, "収穫量 (kg)" %>
    <%= form.number_field :amount, step: 0.1 %>
  </div>

  <div class="field">
    <%= form.label :price_per_kg, "市場価格 (1kgあたり)" %>
    <%= form.number_field :price_per_kg, step: 0.1, value: @price_per_kg %>
  </div>

  <div class="actions">
    <%= form.submit "計算する" %>
  </div>
<% end %>
