<div class="header">
  <h1>野菜を選択してください</h1>
</div>

<div class="vegetable-selection-container">
  <%= form_with(url: schedule_path, method: :get, local: true) do %>
    <div class="vegetable-selection">
      <%= label_tag :vegetable_carrot, 'ニンジン', id: 'vegetable_carrot' %>
      <%= radio_button_tag 'vegetable', 'carrot', false, class: 'vegetable-radio' %>

      <%= label_tag :vegetable_tomato, 'トマト', id: 'vegetable_tomato' %>
      <%= radio_button_tag 'vegetable', 'tomato', false, class: 'vegetable-radio' %>

      <%= label_tag :vegetable_basil, 'バジル', id: 'vegetable_basil' %>
      <%= radio_button_tag 'vegetable', 'basil', false, class: 'vegetable-radio' %>
    </div>

    <div class="submit-button-container">
      <%= submit_tag '選択', class: 'submit-button', disabled: true %>
    </div>
  <% end %>

  <div id="selection-message" style="display: none; color: red; text-align: center;">選択してください。</div>
</div>
